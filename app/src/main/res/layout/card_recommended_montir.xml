<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="@dimen/marginleft"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:padding="@dimen/paddingSmall"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <io.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:elevation="4dp"
            app:shape_roundRect_bottomLeftRadius="10dp"
            app:shape_roundRect_bottomRightRadius="10dp"
            app:shape_roundRect_topLeftRadius="10dp"
            app:shape_roundRect_topRightRadius="10dp"
            >


            <!-- YOUR CONTENT -->
            <ImageView
                android:id="@+id/fotoMontir"
                android:layout_width="100dp"
                android:layout_height="90dp"
                />

        </io.github.florent37.shapeofview.shapes.RoundRectView>

        <TextView
            android:id="@+id/montirTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/psemibold"
            android:textSize="@dimen/fontReg"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/montirSpek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_baseline_accessibility_24"
            android:fontFamily="@font/plight"
            android:textSize="@dimen/fontSmall"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp">

            <RatingBar
                android:id="@+id/ratingBarRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:progressBackgroundTint="@color/grayFont"
                android:progressTint="@color/mainColor" />

            <TextView
                android:id="@+id/jumlahRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSmall"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>